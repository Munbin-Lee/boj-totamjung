{
    "name": "Totamjung",
    "description": "BOJ Algorithm Tag Locker",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.acmicpc.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.acmicpc.net/*"
            ],
            "run_at": "document_idle",
            "js": [
                "widget.js"
            ],
            "css": [
                "widget.css"
            ]
        },
        {
            "matches": [
                "https://www.acmicpc.net/*"
            ],
            "run_at": "document_start",
            "js": [
                "loader.js"
            ],
            "css": [
                "pallette.css",
                "theme.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*.png"
            ],
            "matches": [
                "https://www.acmicpc.net/*"
            ]
        }
    ],
    "options_page": "options.html"
}